<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".layout_activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_titulo_agenda"
            android:text="Teste de Titulo"
            android:textSize="30sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/text_view_descricao_agenda"
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:text="Teste"
                android:textSize="20sp"
                android:layout_marginStart="5dp"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_view_data_agenda"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="teste"
                    android:textSize="20sp"
                    />

                <TextView
                    android:id="@+id/text_view_hora_agenda"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="teste"
                    android:textSize="20sp"
                    />


            </LinearLayout>


        </LinearLayout>




    </LinearLayout>




</LinearLayout>
