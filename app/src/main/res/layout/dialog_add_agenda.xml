<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/BackgroundThemeAddAgendaDialog"
    android:layout_width="match_parent"
    android:layout_height="450dp"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="330dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/edittext_background"
        android:ems="10"
        android:hint="@string/edit_text_nome_add_agenda"
        android:inputType="textImeMultiLine"
        android:maxLines="1"
        android:focusable="true"
        android:maxLength="14"
        android:paddingStart="20dp"
        android:textColorHint="#464646"
        android:fontFamily="@font/ptsans_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="Autofill,MissingConstraints" />

    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="330dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_background"
        android:maxLines="1"
        android:ems="10"
        android:hint="@string/edit_text_descricao_add_agenda"
        android:inputType="textImeMultiLine"
        android:imeOptions="actionSend"
        android:fontFamily="@font/ptsans_regular"
        android:maxLength="20"
        android:paddingStart="20dp"
        android:textColorHint="#464646"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/button_login"
        style="@style/ButtonSelector"
        android:textAllCaps="false"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/button_salvar_agenda"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView2"
        style="@style/TextColorAddAgenda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="@string/text_view_add_agenda"
        android:textSize="20sp"
        android:fontFamily="@font/ptsans_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:id="@+id/textView4"
        style="@style/TextColorAddAgenda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/baseline_schedule_24"
        android:text="Horário"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/ptsans_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.339"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/switch1"
        tools:ignore="MissingConstraints" />

    <TextView
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:id="@+id/textView5"
        style="@style/TextColorAddAgenda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/baseline_calendar_month_24"
        android:text="Data"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:fontFamily="@font/ptsans_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.293"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch1"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:id="@+id/imageView4"
        style="@style/Back_Button_Item2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/switch1"
        style="@style/TextColorAddAgenda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/bell_svg_3"
        android:drawablePadding="2dp"
        android:text="Definir lembrete"
        android:textSize="16sp"
        android:fontFamily="@font/ptsans_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextText2"
        tools:ignore="MissingConstraints,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/text_view_contador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/14"
        android:textColor="#464646"
        android:fontFamily="@font/ptsans_regular"
        app:layout_constraintBottom_toBottomOf="@+id/editTextText"
        app:layout_constraintEnd_toEndOf="@+id/editTextText"
        app:layout_constraintHorizontal_bias="0.94"
        app:layout_constraintStart_toStartOf="@+id/editTextText"
        app:layout_constraintTop_toTopOf="@+id/editTextText" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/20"
        android:textColor="#464646"
        android:fontFamily="@font/ptsans_regular"
        app:layout_constraintBottom_toBottomOf="@+id/editTextText2"
        app:layout_constraintEnd_toEndOf="@+id/editTextText2"
        app:layout_constraintHorizontal_bias="0.932"
        app:layout_constraintStart_toStartOf="@+id/editTextText2"
        app:layout_constraintTop_toTopOf="@+id/editTextText2" />

    <TextView
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:id="@+id/textViewRepetirLembrete"
        style="@style/TextColorAddAgenda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/refresh_icon"
        android:drawableRight="@drawable/down_icon"
        android:drawablePadding="2dp"
        android:text="Não repetir"
        android:textSize="16sp"
        android:fontFamily="@font/ptsans_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />


</androidx.constraintlayout.widget.ConstraintLayout>